<div class="simple-calendar">
  <div class="calendar-heading">
    <table><tr>
    <td><button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span><h5>New Entry</h5></button></td>
    <td><div class="prevhead"><h4><%= link_to '<span class="glyphicon glyphicon-circle-arrow-left"></span>'.html_safe, calendar.url_for_previous_view %></h4>
    </div></td>
    <td><div class="monthhead"><span class="calendar-title"><h3><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></h3></span></div></td>
    <td><div class="nexthead"><h4><%= link_to '<span class="glyphicon glyphicon-circle-arrow-right"></span>'.html_safe, calendar.url_for_next_view %></h4>
    </div></td>
    <td>
      <div class="balance">
        <table class="table table-condensed table-striped">
          <tr>
            <th>Balance:</th>
          </tr>
          <tr>
            <td>Php <%= @balance %></td>
          </tr>
        </table>
      </div>
    </td></tr></table>
  </div>
  
  <div class="calendar-body">
    <table>
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th><div class="daycells"><%= t('date.day_names')[day.wday] %><div></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <div class="datecells">
                <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                  <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
                <% else %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
                  <%#= link_to '<button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span></button>'.html_safe, :action => :check_teachers, remote: true %>
                </div>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
