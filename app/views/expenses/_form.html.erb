<%= form_for(@expense) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <%= f.label :name, "Info" %>
    <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :value %>
    <%= f.text_field :value, class: 'form-control' %>
</div>
<div class="form-group">
    <%= f.label :flow, 'Type' %>
    <div class="form-group">
      <label class="radio-inline">
        <%= f.radio_button :flow, "Expense", checked: true%>
        <%= f.label :flow, "Expense"%>
      </label>
      <label class="radio-inline">
        <%= f.radio_button :flow, "Income"%>
        <%= f.label :flow, "Income"%>
      </label>
  </div>
</div>
<div class="form-group">
    <%= f.label :start_time, "Date" %><br>
    <%= f.date_select :start_time, {}, {:class => 'form-control date-select'} %>
</div>
<div class="form-group">
  <div class="actions">
    <%= button_tag "Submit", type: 'submit',  class: 'btn btn-primary'%>
    <%#= f.submit %>
  </div>
</div>
<% end %>
