<div id="header">
	<h1>Rails is lyf</h1>
</div>

<div class="simple-calendar">
  <%= month_calendar events: @expenses do |date, expenses| %>    
    <div class="click">
      <!-- <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span>&nbsp;<%= date.day %></button> -->
      <%= link_to ('<button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span>&nbsp;'+date.day.to_s+'</button>').html_safe, :action => :show, remote: true %>
    </div>

    <% expenses.each do |expense| %>
      <div><p class="expense">
        <%= expense.name %>:
        <span>
          <% if expense.flow == "Expense" %>
            -<%= expense.value %>
          <% else %>
            +<%= expense.value %>
          <% end %>
        </span>
      </p></div>
    <% end %>
  <% end %>
</div>

<%= render "layouts/modal" %>